package music;
import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 20;
		Scanner teclado = new Scanner(System.in);
		Nota nota = new Nota();
		menu(teclado, nota, num);
	}

	private static void menu(Scanner teclado, Nota nota, int num) {

		do {
			if(bucleMain(teclado, nota, num) == 2) {
				bucleMainSilenced(teclado, nota, num);
			}
			else {
				bucleMain(teclado, nota, num);
			}
		}while(num == 20 || num == 2);



	}

	private static int bucleMain(Scanner teclado, Nota nota, int num) {

		do {
			
			textMenu();
			num = teclado.nextInt();
			switch(num) {
			case 1:
				nota.generarNota();
				System.out.println(nota);
				break;
			case 2:
				System.out.println("Se silenciará el menú, para reactivarlo, pulsa 2.");
				num = 2;
				break;
			}

			
		}while(num != 3 && num != 2);
		
		return num;
	}
	private static void bucleMainSilenced(Scanner teclado, Nota nota, int num) {

		do {
			
			num = teclado.nextInt();
			switch(num) {
			case 1:
				nota.generarNota();
				System.out.println(nota);
				break;
			case 2:
				System.out.println("Se silenciará el menú, para reactivarlo, pulsa 2.");
				break;
			}
			
		}while(num != 3 || num != 2);
	}

	private static void textMenu() {
		System.out.println("Selecciona una opción: ");
		System.out.println("1. Nueva nota ");
		System.out.println("2. Silenciar menú");
		System.out.println("3. Salir");
	}
	
	private static void hideMenu() {
		
	}

}
